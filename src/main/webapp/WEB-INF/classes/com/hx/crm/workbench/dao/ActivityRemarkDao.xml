<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hx.crm.workbench.dao.ActivityRemarkDao">
    <update id="updateRemark">
        update tbl_activity_remark set noteContent=#{noteContent},editBy=#{editBy}
                                       ,editTime=#{editTime}
                                       ,editFlag=#{editFlag}
        where id=#{id}

    </update>
    <insert id="saveRemark">
        insert into tbl_activity_remark (
                                         id,
                                         noteContent,
                                         createTime,
                                         createBy,
                                         editFlag,
                                         activityId
        )
        values (
                   #{id},
                   #{noteContent},
                   #{createTime},
                   #{createBy},
                   #{editFlag},
                   #{activityId}
                )
    </insert>
    <delete id="deleteRemark">
        delete from tbl_activity_remark where id=#{id}
    </delete>
    <select id="getRemarkListByAid" resultType="ActivityRemark">

       select * from tbl_activity_remark where activityId =#{id}

    </select>
    <select id="getCountByAids" resultType="int">
        select count(*) from tbl_activity_remark
        where activityId in
        <foreach collection="array" item="aid" open="(" close=")" separator=",">
            #{aid}
        </foreach>


    </select>
    <delete id="deleteByAids">
        delete from tbl_activity_remark
        where activityId in
        <foreach collection="array" item="aid" open="(" close=")" separator=",">
            #{aid}
        </foreach>
    </delete>

</mapper>
